{% extends '@Front/Default/base.html.twig' %}

{% block title %} GSB - Ajoute d'utilisateur {% endblock title %}

{% block body %}

    <div class="row manie centered">
        <div class="container col-3 formcontainer">
        </div>
    </div>

    <div class="row manie justify-content-center">
        <div class="container col-6 col-sm-6 col-md-6 col-lg-6 formcontainer">
            <div class="addutilisateur">

                {% for message in app.flashes('success') %}
                    <div class="flash-notice">
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}

                <h4>Ajoutez un utilisateur</h4>
                <br />
                <br />

                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}


            </div>
        </div>
    </div>
    </div>



    {% block javascripts %}

        <script>
            $(document).ready(function() {
                // configure the bootstrap datepicker
                $('.js-datepicker').datepicker({
                    format: 'yyyy-mm-dd'
                });
            });

        </script>
    {% endblock javascripts %}

{% endblock body %}

