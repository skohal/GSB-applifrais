{% extends '@Front/Default/base.html.twig' %}

{% block title %}GSB - Connection applifrais{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center logfos">
                <h1 class="mt-5 h1-index">Galaxy Swiss Bourdin</h1>

                <div class="row justify-content-center">
                    <div class="col-6 col-md-6 offset-md-6 col-sm-6 offset-sm-6 col-lg-8 offset-lg-8">

                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                            <div class="row justify-content-center">
                                <div class="form-group2 col-md-8 col-lg-9 col-sm-8 col-10 offset-md-2">

                                    <label class="control-label" for="username">{{ 'security.login.username'|trans }}</label>
                                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                                </div>
                            </div>

                            <br/>

                            <div class="row justify-content-center">
                                <div class="form-group3 col-md-8 col-lg-9 col-sm-8 col-10 offset-md-2">


                                    <label class="control-label" for="password">{{ 'security.login.password'|trans }}</label>
                                    <input class="form-control" type="password" id="password" name="_password" required="required" />

                                </div>
                            </div>

                            <hr/>

                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>


                            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock body %}